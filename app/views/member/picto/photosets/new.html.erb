<% content_for :sidebar do %>
  <%= link_to I18n.t("photosets.new.upload_more_photos"),  new_member_picto_photo_url, { :class => "add", :title => I18n.t("photosets.new.upload_new_images") } %>
<br/>
  <%= link_to I18n.t("photosets.new.your_photosets"), member_picto_photosets_url %>
<% end %>


<div class="titleB"><%= I18n.t("photosets.new.new_photoset") %></div>
<br />

<%= error_messages_for :photoset %>

<% form_for :photoset, :url => member_picto_photosets_path, :html => {:id => "settings", :method => "post"} do |f| -%>

  <fieldset>
    <div class="fields">
       <p><label><%= I18n.t("photosets.new.title") %></label> <%= f.text_field :title, {:class => "fieldbox", :size => "40"} %></p>

       <p><label><%= I18n.t("photosets.new.description") %></label> <%= f.text_area :description, :size => '40x4' %></p>

       <p><label><%= I18n.t("photosets.new.tags_separated_by") %></label> <%= f.text_field :tag_list, {:class => "fieldbox", :size => "40"} %></p>

       <p><label><%= I18n.t("photosets.new.privacy") %></label><%= f.check_box :privacy %> <%= I18n.t("photosets.new.photoset_is_private") %></p>

    </div>
  </fieldset>
  <br />
  <div class="actions">
    <%= submit_tag I18n.t("photosets.new.create_photoset"), :class => "button mainaction" %>
  </div>
<% end -%>
